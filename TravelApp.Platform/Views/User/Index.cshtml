@model TravelApp.API.Models.User
@{
    ViewData["Title"] = "Профиль";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <h1 class="text-center text-primary mb-4 fs-4">Профиль пользователя</h1>

        <div class="mb-4">
            <div class="d-flex justify-content-between py-2 border-bottom">
                <span class="text-muted fw-bold">Фамилия:</span>
                <span class="text-dark">@Model.LastName</span>
            </div>
            <div class="d-flex justify-content-between py-2 border-bottom">
                <span class="text-muted fw-bold">Имя:</span>
                <span class="text-dark">@Model.FirstName</span>
            </div>
            <div class="d-flex justify-content-between py-2 border-bottom">
                <span class="text-muted fw-bold">Почта:</span>
                <span class="text-dark">@Model.Email</span>
            </div>
            <div class="d-flex justify-content-between py-2 border-bottom">
                <span class="text-muted fw-bold">Возраст:</span>
                <span class="text-dark">@Model.Age лет</span>
            </div>
        </div>

        <a href="#" class="btn btn-primary w-100">Сменить пароль</a>
    </div>
</div>
