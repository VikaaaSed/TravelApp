@model TravelApp.API.Models.User
@{
    ViewData["Title"] = "Профиль";
}
<div class="container mt-4">

    <div class="card p-4 mb-4">
        <div class="d-flex align-items-center gap-3">
            <img src="@(string.IsNullOrEmpty(Model.AvatarLink) ? Url.Content("~/defaultUserAvatar.jpg") : Model.AvatarLink)"
                 class="rounded-circle"
                 style="width: 60px; height: 60px;"
                 alt="Аватар" />            <div>
                <h5>@($"{Model.FirstName} {Model.LastName}")</h5>
                <p class="text-muted mb-0">@Model.Email</p>
            </div>
            <div class="ms-auto">
                <a href="#" class="btn btn-primary btn-sm">Редактировать профиль</a>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#places" role="tab">Куда сходить</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#followers" role="tab">Подписчики</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#following" role="tab">Подписки</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#reviews" role="tab">Мои отзывы</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="followers" role="tabpanel">
        </div>
        <div class="tab-pane fade" id="following" role="tabpanel">
        </div>
        <div class="tab-pane fade" id="reviews" role="tabpanel">
        </div>
        <div class="tab-pane fade" id="places" role="tabpanel">
        </div>
    </div>
</div>