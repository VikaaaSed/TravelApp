<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attractions</title>
    <link href="https://fonts.googleapis.com/css2?family=Kiwi+Maru&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column min-vh-100">
    <header class="kiwi-maru-regular">
        <nav class="background-gradient navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://imgur.com/dG5bgFV.png" class="rotateImg" width="65px" alt="Лого" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">О нас</a>
                        </li>
                    </ul>
                </div>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a class="navbar-brand" asp-controller="User" asp-action="Profile">Профиль</a>
                    <form method="post" asp-controller="User" asp-action="Logout" class="d-inline">
                        <button type="submit" class="btn btn-link navbar-brand">Выйти</button>
                    </form>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="User" asp-action="Authorization">Вход</a>
                    <a class="navbar-brand" asp-controller="User" asp-action="Registration">Регистрация</a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer text-muted background-gradient py-2 mt-auto border-top">
        <div class="container d-flex align-items-center">
            <span class="cat">
                /\_/\
                ( o.o )
                = ^ =
            </span>
            <span class="ms-3">&copy; 2025 - Сайт выполнен в качестве задания на диссертацию</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>