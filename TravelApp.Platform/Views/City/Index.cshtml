@model TravelApp.Platform.Models.AllCityInformation
@{
    ViewData["Title"] = Model.City.Title;
}

<div class="img-container my-5">
    <img class="city-main-img" src="@Model.City.MainPictureLink" alt="@Model.City.Title" />
    <div class="mx-5">
        <h1 class="kiwi-maru-regular text-center my-5">Немного из истории</h1>
        @Html.Raw(Model.City.Description)
    </div>
</div>
<div class="items py-5 text-center">
    <div class="item-center">
        <h2 class="kiwi-maru-regular text-center">
            Куда сходить
        </h2>
    </div>
    @foreach (var location in Model.Locations)
    {
        <div class="item">
            <a asp-action="index" asp-controller="Location" asp-route-pageName="@location.PageName">
                <img src="@location.PictureInCityLink" alt="@location.Title">
                <div class="centered">
                    @location.Title
                </div>
                <span class="bottom-right badge bg-success rounded-pill">
                    @location.Rating
                </span>
            </a>
        </div>
    }
</div>