@model TravelApp.API.Models.Feedback
 @{
     ViewData["Title"] = "Редактирование отзыва";
 }
 
 <div class="container mt-4">
     <h2 class="mb-4">Редактирование отзыва</h2>
 
     <form asp-action="Index" method="post" class="needs-validation" novalidate>
         <div class="card mb-4">
             <div class="card-header bg-light">
                 <h5 class="mb-0">Основная информация</h5>
             </div>
             <div class="card-body">
                 <div class="row">
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.Id" class="form-label">Номер отзыва</label>
                         <input asp-for="@Model.Id" class="form-control" disabled/>
                     </div>
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.IdLocation" class="form-label">Номер локации</label>
                         <input asp-for="@Model.IdLocation" class="form-control" disabled />
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.IdUser" class="form-label">Номер пользователя</label>
                         <input asp-for="@Model.IdUser" class="form-control" disabled />
                     </div>
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.SenderIpAddress" class="form-label">IP-адрес пользователя</label>
                         <input asp-for="@Model.SenderIpAddress" class="form-control" disabled />
                         <span asp-validation-for="@Model.SenderIpAddress" class="text-danger"></span>
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.Ball" class="form-label">Балл</label>
                         <input type="number" min="1" max="5" asp-for="@Model.Ball" class="form-control"/>
                         <span asp-validation-for="@Model.Ball" class="text-danger"></span>
                     </div>
                     <div class="col-md-6 mb-3">
                         <label asp-for="@Model.NameSender" class="form-label">Имя отправителя</label>
                         <input asp-for="@Model.NameSender" class="form-control" />
                         <span asp-validation-for="@Model.NameSender" class="text-danger"></span>
                     </div>
                 </div>
                 <div class="mb-3">
                     <label asp-for="@Model.Text" class="form-label">Отзыв</label>
                     <textarea asp-for="@Model.Text" class="form-control" rows="5"></textarea>
                     <span asp-validation-for="@Model.Text" class="text-danger"></span>
                 </div>
                 <div class="form-check form-switch mb-3">
                     <input class="form-check-input" type="checkbox" asp-for="@Model.IsAccepted" id="IsAccepted">
                     <label class="form-check-label" for="IsAccepted">Подтвердить</label>
                 </div>
                 <div class="form-check form-switch mb-3">
                     <label asp-for="@Model.DateTime" class="form-label">Дата отправления</label>
                     <input type="datetime" asp-for="@Model.DateTime" class="form-control" />
                     <span asp-validation-for="@Model.DateTime" class="text-danger"></span>
                 </div>
             </div>
         </div>
         <div class="d-flex justify-content-between">
             <a asp-action="Index" class="btn btn-outline-secondary">
                 <i class="bi bi-arrow-left"></i> Назад к списку
             </a>
             <button type="submit" class="btn btn-primary">
                 <i class="bi bi-save"></i> Сохранить изменения
             </button>
         </div>
     </form>
 </div>
 
 @section Styles {
     <style>
 
         .table th {
             white-space: nowrap;
         }
 
         .table td {
            vertical-align: middle;
        }

        .table .btn-group {
            white-space: nowrap;
        }

        .image-preview-container {
            position: relative;
            border: 1px dashed #ddd;
            border-radius: 0.25rem;
            padding: 0.5rem;
            background-color: #f8f9fa;
            min-height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .loading-spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .img-thumbnail {
            max-height: 200px;
            object-fit: contain;
        }
    </style>
}
